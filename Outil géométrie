  <style>
    body { background-color: #121212; color: white; font-family: Arial, sans-serif; text-align: center; }
    h1 { color: #00ffcc; }
    canvas { border: 2px solid #00ffcc; background: #1e1e1e; margin-top: 20px; cursor: crosshair; box-shadow: 0 0 15px #00ffcc33; }
    .nav { margin-bottom: 20px; }
    button { background: #1e1e1e; color: #00ffcc; border: 1px solid #00ffcc; padding: 10px 20px; cursor: pointer; border-radius: 5px; }
    button:hover { background: #00ffcc; color: #121212; }
  </style>
